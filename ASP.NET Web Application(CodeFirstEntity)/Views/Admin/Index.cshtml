@using ASP.NET_Web_Application_CodeFirstEntity_.Models.siniflar;
@model List<Yetenekler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Yetenek</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
     {
        <tr>
            <td>@item.ID</td>
            <td>@item.Aciklama</td>
            <td>@item.Deger</td>
            <td><a href="/Admin/YetenekSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YetenekGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
     }
</table>